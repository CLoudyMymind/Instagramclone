@model Instagram.ViewModels.CreatePostViewModel

@{
    ViewBag.Title = "создание поста";
    Layout = "_Layout";
}
@if (TempData["Error"] != null)
{
    <p class="alert-danger">@TempData["Error"]</p>
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center">Создание поста</h2>
        <form method="post" class="was-validated" asp-action="PostsCreate" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Decription">Введите описание</label>
                <input asp-for="Decription" class="form-control" id="Name" required/>
                <span asp-validation-for="@Model.Decription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="productImage">Фото:</label>
                <input asp-for="Avatar" class="form-control" id="productImage" type="file" required/>
                <span asp-validation-for="@Model.Avatar" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success mt-3">Создать</button>
            <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
        </form>
    </div>
</div>
