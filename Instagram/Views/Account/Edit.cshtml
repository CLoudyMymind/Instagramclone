@model Instagram.ViewModels.EditProfileViewModel


@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<link rel="stylesheet" href="~/css/RegisterPage.css" asp-append-version="true"/>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Регистрация в Instagram</title>
</head>
<body>
<div class="container-register">
    <h1>Регистрация в Instagram</h1>
    <form asp-action="edit" method="post" asp-antiforgery="true" enctype="multipart/form-data" >
        <div class="form-group">

            <label asp-for="Name">Фио</label>
            <input type="text" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Login">Ваш никнейм</label>
            <input type="text"  asp-for="Login">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Электронная почта:</label>
            <input type="email"  asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль:</label>
            <input type="password" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">

            <label asp-for="ConfirmPassword">Подтверждение Пароль:</label>
            <input type="password" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Номер телефона:</label>
            <input type="Phone" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="About">Описание</label>
            <input type="about" asp-for="About">
            <span asp-validation-for="About" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Avatar">Загрузите фото</label>
            <input type="file" asp-for="Avatar">
            <span asp-validation-for="Avatar" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Пол:</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Male" value="Мужской" >
                <label class="form-check-label" >Мужской</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Male" value="Женский" >
                <label class="form-check-label" >Женский</label>
            </div>
            <span asp-validation-for="Male" class="text-danger"></span>
        </div>
        <button type="submit">Зарегистрироваться</button>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    </form>
    <p class="bottom-text">
        Уже есть аккаунт? <a asp-action="Login" class="text-black" type="submit">Войти</a>
    </p>
    
</div>
</body>
</html>