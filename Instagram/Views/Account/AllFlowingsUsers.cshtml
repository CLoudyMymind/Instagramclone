@model System.Collections.Generic.List<Instagram.Models.FollowersAndSubscribers>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@if (!@Model.Any())
{
    <p>на вас еще не подписались</p>
}
@foreach (var user in Model)
{
    
    <div class="row">
        <div class="col-md-4 mb-3">
                <div class="card">
                    <img class="card-img-top" src="@user.FollowerUser.PathFile" alt="Фото пользователя">
                    <div class="card-body">
                        <h5 class="card-title">@user.FollowerUser.UserName</h5>
                        <p class="card-text">@user.FollowerUser.Name</p>
                        <a href="@Url.Action("About", new { id = user.FollowerUser.Id })" class="btn btn-primary">Посмотреть профиль</a>
                    </div>
                </div>
            </div>
        
    </div>
}
